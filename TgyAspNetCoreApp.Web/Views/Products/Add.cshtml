<h1> Product Add</h1>

@model ProductViewModel

<form asp-controller="Products" asp-action="Add" method="post">

    @* 1. ve 2. Yöntem
    <label>Product Name :</label>
    <input type="text" name="Name" />
    <br/>

    <label>Product Price :</label>
    <input type="text" name="Price" />
    <br />

